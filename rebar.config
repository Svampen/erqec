%% -*- mode: erlang -*-
{erl_opts, [debug_info, {parse_transform, lager_transform},
            {i, "./_build/default/plugins/gpb/include/"}]}.
{plugins, [{rebar3_gpb_plugin, "2.12.1"}]}.

{gpb_opts, [{i, "proto"},
	    {o_erl, "src"},
	    {o_hrl, "include"},
            maps]}.

{deps, [{lager,
	 {git, "git@github.com:erlang-lager/lager.git",
	  {tag, "3.6.8"}}},
        {esockd,
         {git, "git@github.com:emqx/esockd.git",
          {tag, "v5.5.1"}}}
       ]}.

{shell, [
	 {config, "config/erqec.config"},
         {apps, [lager, erqec]}
        ]}.

{provider_hooks, [{pre, [{compile, {protobuf, compile}}]}]}.
